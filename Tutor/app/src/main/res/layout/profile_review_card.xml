<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_review_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_review_card_reviewer"
                android:text="Cheng Lyu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textAppearance="@style/myStyle"/>

            <TextView
                android:id="@+id/profile_review_card_review_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="He is such a brilliant tutor!"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:layout_marginBottom="4dp"/>

            <Button
                android:id="@+id/profile_review_card_comment_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:paddingStart="8dp"
                android:text="Comment"
                android:textSize="14sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>