<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/request_sent_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/request_sent_card_tutor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:textSize="18sp"
            android:textColor="#000000"
            tools:text="Jia Zeng" />

        <TextView
            android:id="@+id/request_sent_card_sent_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/request_sent_card_tutor_name"
            tools:text="Sent at: last week"
            android:layout_above="@+id/linearLayout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_sent_card_tutor_name"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/request_sent_card_session_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Duration: 10 hrs" />

        </LinearLayout>

        <TextView
            android:id="@+id/request_sent_card_is_accpeted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            tools:text="Status: Accept" />

        <RelativeLayout
            android:layout_below="@+id/request_sent_card_is_accpeted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/request_sent_card_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment:"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/request_sent_card_comment_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/request_sent_card_comment"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                tools:text="This is a test for balalla/ I really like CS290.3"/>


        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>